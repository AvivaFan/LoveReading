<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.reading">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".ReadingApp"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.ui.activity.SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view.ui.activity.LoginActivity"/>

        <activity
            android:name=".view.ui.activity.HomeActivity" />

        <activity
            android:name=".view.ui.activity.ReadActivity"/>

        <activity
            android:name=".view.ui.activity.BrowseActivity"/>

        <activity
            android:name=".view.ui.activity.DetailsActivity" />

    </application>

</manifest>