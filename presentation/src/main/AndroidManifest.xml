<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.reading">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".ReadingApp"
        android:theme="@style/Primary1">
        <activity
            android:name=".view.ui.activity.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".view.ui.activity.JokeActivity" />

        <activity android:name=".view.ui.activity.DetailsActivity" />

        <activity android:name=".view.ui.activity.FeaturedActivity" />

        <activity android:name=".view.ui.activity.CollectionActivity" />

        <activity android:name=".view.ui.activity.SkinActivity" />
    </application>

</manifest>