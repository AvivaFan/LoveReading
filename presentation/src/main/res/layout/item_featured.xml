<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickHandler"
            type="com.android.reading.interactive.ClickHandler" />

        <variable
            name="model"
            type="com.android.reading.model.FeaturedModel" />
    </data>

    <android.support.v7.widget.CardView
        style="@style/CommonCard"
        android:layout_height="@dimen/default_item_height"
        android:paddingLeft="@dimen/layout_common_padding"
        android:paddingRight="@dimen/layout_common_padding"
        android:onClick="@{() -> clickHandler.onClick(model)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/default_vertical_padding"
            android:paddingRight="@dimen/default_vertical_padding">

            <ImageView
                android:id="@+id/featured_thumbnail"
                android:layout_width="@dimen/default_news_image_width"
                android:layout_height="@dimen/default_news_image_height"
                android:contentDescription="@string/news_thumbnail"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:imageUrl="@{model.firstImg}"/>

            <TextView
                android:id="@+id/featured_title"
                style="@style/TitleText"
                android:layout_toRightOf="@+id/featured_thumbnail"
                android:layout_toEndOf="@+id/featured_thumbnail"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_common_padding"
                android:layout_marginStart="@dimen/layout_common_padding"
                android:text="@{model.title}"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>