<resources>

    <!-- 默认主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- 夜间主题 -->
    <style name="AppTheme.Night" parent="AppTheme">
        <item name="title_text_color">@color/nightTitleTextColor</item>
        <item name="info_text_color">@color/nightInfoTextColor</item>
        <item name="view_background">@color/nighBackground</item>
        <item name="colorPrimary">@color/nighPrimary</item>
        <item name="android:windowBackground">@color/nighWindowBackground</item>
        <item name="colorAccent">@color/nighAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Splash -->
    <style name="Splash" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Dialog -->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="CustomDialog_Translucent" parent="CustomDialog">
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <!-- Text -->
    <style name="CommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleText" parent="CommonText">
        <item name="android:textSize">@dimen/common_title_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="InfoText" parent="CommonText">
        <item name="android:textSize">@dimen/common_info_text_size</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="AppBarText" parent="CommonText">
        <item name="android:textColor">@color/browse_bar_text_color</item>
    </style>

    <style name="CommonCard">
        <item name="cardElevation">@dimen/common_elevation</item>
        <item name="cardCornerRadius">@dimen/common_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common_padding</item>
        <item name="android:layout_marginRight">@dimen/common_padding</item>
    </style>

    <!-- Line -->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.333dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.33dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <!-- Image -->
    <style name="CommonImage">
        <item name="android:layout_width">@dimen/common_image_size</item>
        <item name="android:layout_height">@dimen/common_image_size</item>
        <item name="android:contentDescription">@string/image_description</item>
    </style>

    <!-- Edit -->
    <style name="CommonEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_widget_height</item>
        <item name="android:layout_marginLeft">@dimen/common_margin</item>
        <item name="android:layout_marginRight">@dimen/common_margin</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Button -->
    <style name="CommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_widget_height</item>
        <item name="android:layout_marginLeft">@dimen/common_margin</item>
        <item name="android:layout_marginRight">@dimen/common_margin</item>
    </style>

    <!-- Layout -->
    <style name="CommonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/login_background</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>
</resources>
