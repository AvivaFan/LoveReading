<resources>

    <!-- 默认主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/default_accent_color</item>
        <item name="title_text_color">@color/default_title_text_color</item>
        <item name="info_text_color">@color/default_info_text_color</item>
        <item name="view_background">@color/colorWhite</item>
        <item name="android:windowBackground">@color/default_window_background_color</item>
    </style>

    <!-- 夜间主题 -->
    <style name="AppTheme.Night" parent="AppTheme">
        <item name="title_text_color">@color/nightTitleTextColor</item>
        <item name="info_text_color">@color/nightInfoTextColor</item>
        <item name="view_background">@color/nighBackground</item>
        <item name="colorPrimary">@color/nighPrimary</item>
        <item name="android:windowBackground">@color/nighWindowBackground</item>
        <item name="colorAccent">@color/nighAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="CustomDialog_Translucent" parent="CustomDialog">
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="CommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/title_text_color</item>
    </style>

    <style name="TitleText" parent="CommonText">
        <item name="android:textSize">@dimen/default_title_text_size</item>
        <item name="android:textColor">?attr/title_text_color</item>
    </style>

    <style name="InfoText" parent="CommonText">
        <item name="android:textSize">@dimen/default_info_text_size</item>
        <item name="android:textColor">?attr/info_text_color</item>
    </style>

    <style name="CommonCard">
        <item name="cardBackgroundColor">?attr/view_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/default_elevation</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="android:layout_marginLeft">@dimen/layout_common_padding</item>
        <item name="android:layout_marginRight">@dimen/layout_common_padding</item>
    </style>

    <!-- 下划线 -->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.333dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.33dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="CommImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="srcCompat">@mipmap/ic_launcher</item>
    </style>

    <style name="CommImageView.Login" parent="CommImageView">
        <item name="android:layout_width">@dimen/login_default_image_size</item>
        <item name="android:layout_height">@dimen/login_default_image_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="CommEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appbar_height</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="CommButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appbar_height</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>
</resources>
